<main>
  <div class="container">
    <h1>Show -- User Profile</h1>

    <h1><%= user.username %></h1>
    <h2><%= user.age %></h2>
    <h3><%= user.location %></h3>

    <%= cities %>

    

  <img src="<%= user.imageSRC %>" alt="<%= user.username %>">

  <button><a href="/cities/new">create new city</a></button>

  <button><a href="/users/<%= user.id %>/edit">Edit</a></button>

  <a href="/users/<%= user.id %>/images/new">Add image</a>

  <hr>
  <h1><%= user.username %>'s images</h1>
  <div class="feed">
    <% user.images.forEach((image) => { %>
      <img src="<%= image.src %>" alt="<%= image.caption %>">
      <p><%= image.caption %></p>
    <% }) %>
  </div>

  <form action="/users/<%= user.id %>" method="POST">
    <input type="hidden" name="_method" value="DELETE"/>
    <button>Delete</button>
</form>
</div>
</main>
