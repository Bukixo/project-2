
  <form method="POST" action="/users/<%= user.id %>">
    <input type="hidden" name="_method" value="PUT">
    <div>
      <label for="username">name</label>
      <input type="text" name="username" id="username" value="<%= user.username %>">
    </div>

    <div>
      <label for="age">age</label>
      <input type="text" name="age" id="age" value="<%= user.age %>">
    </div>

    <div>
      <label for="location">location</label>
      <input type="text" name="location" id="location" value="<%= user.location %>">
    </div>

    <form method="POST" action="/user/images" enctype="multipart/form-data">
      <div>
        <label for="filename">Image file</label>
        <input type="file" name="filename" id="filename">
      </div>
      <div>
        <label for="caption">Caption</label>
        <textarea name="caption" id="caption"></textarea>
      </div>

  <button>Update</button>
</form>
