<div class="new-image">

  <form class="form-horizontal" method="POST" action="/cities/<%= city.id %>/images" enctype="multipart/form-data">

    <div class="form-group">
      <label for="inputFile" class="col-sm-2 control-label">File name</label>
      <div class="col-sm-10">
        <input type="file" class="form-control" id="filename" placeholder="fileName" name="filename" required>
      </div>
    </div>
    <div class="form-group">
      <label for="caption" class="col-sm-2 control-label">caption</label>
      <div class="col-sm-10">
        <input type="caption" class="form-control" id="caption" placeholder="caption" name="caption" required>
      </div>
    </div>
    <button>Add</button>
  </form>

</div>
